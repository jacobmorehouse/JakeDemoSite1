@model IEnumerable<JakeDemoSite1.Models.Employees>

@{
	ViewData["Title"] = "Employees";
}
<style>
	.container {
		/* display: flex; */
	}
</style>

<h1>Employees</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>

<div class="row">
@foreach (var item in Model)
{
	<div class="col-lg-4">
		<div class="card-columns">
			<div class="card" style="margin-bottom: 1em;">
				<div class="card-body">
					<h5 class="card-title">@item.LastCommaFirst (@item.TitleOfCourtesy)</h5>
					<h6 class="card-subtitle mb-2 text-muted">@item.Title</h6>
					<p class="card-text">@item.Notes</p>
					<a class="card-link" asp-action="Details" asp-route-id="@item.EmployeeID">Details</a>
					<a class="card-link" asp-action="Edit" asp-route-id="@item.EmployeeID">Edit</a>
					<a class="card-link" asp-action="Delete" asp-route-id="@item.EmployeeID">Delete</a>
				</div>
			</div>
		</div>
	</div>
}
</div>

